<entry metal:define-macro="atomEntry"
     xmlns="http://purl.org/atom/ns#"
     xmlns:tal="http://xml.zope.org/namespaces/tal"
     xmlns:metal="http://xml.zope.org/namespaces/metal">
     
  <title tal:content="here/Title" mode="escaped" type="text/text">EntryTitle</title>
  <link tal:attributes="href here/absolute_url" rel="alternate" type="text/html" href="URL" />
  <issued tal:content="python: here.getDateStr(here.effective(), fmt='iso8601_long')"></issued>
  <modified tal:content="python: here.getDateStr(here.modified(), fmt='iso8601_long')"></modified>
  <created tal:content="python: here.getDateStr(here.created(), fmt='iso8601_long')"></created>
  <author>
    <name tal:content="here/Creator"></name>
  </author>
  
  <tal:block repeat="cat here/Subject">
    <subject tal:attributes="value string:${here/absolute_url}#${cat/title}" 
             tal:content="cat/title"
             value="cat">cat</subject>
  </tal:block>
  
  <summary type="text/html" mode="escaped" tal:content="here/getSummary">
    summary
  </summary>

  <content type="text/html" mode="escaped" xml:space="preserve"
    tal:content="here/content">
  </content>

  <id tal:content="python: here.computeIdFromUrl(url=here.absolute_url())">123</id>
  <link tal:attributes="href string:${here/absolute_url}/atomEdit?${here/getId}; title string:Edit Here - ${here/Title}" rel="service.edit" type="application/atom+xml" />
</entry>
