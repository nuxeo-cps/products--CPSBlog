<tal:block define="context_obj nocall:options/context_obj;
		   proxy context_obj/getBlogProxy;
		   categories python:context_obj.getCPSBlogCategories(proxy)"
	   condition="categories">
    <ul class="cpsskinsMenu">
      <li tal:repeat="category categories">
	<a tal:attributes="href string:${proxy/absolute_url}/archive_view?category=${category/title}&relative=1">
	  <span tal:replace="category/title" />&nbsp;(<span tal:replace="category/posts" />)
	</a>
      </li>
    </ul>
</tal:block>
